# chromaroute configuration
# Copy this file to .env and fill in your values

# Required for OpenRouter provider
OPENROUTER_API_KEY=sk-or-...

# Optional: embedding model (default shown)
# OPENROUTER_EMBEDDINGS_MODEL=openai/text-embedding-3-small

# Optional: provider routing (JSON)
# OPENROUTER_EMBED_PROVIDER_JSON={"order":["openai"],"allow_fallbacks":true}

# Optional: provider selection (auto, openrouter, local)
# EMBED_PROVIDER=auto

# Optional: local model when using local provider
# LOCAL_EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
